            android:padding="0dp"
            android:text="X"
            android:fontFamily="@font/gochi_hand"
            android:textColor="@android:color/transparent"
            android:textSize="70sp"

            app:cornerRadius="0dp"
            app:layout_column="0"
            app:layout_row="1" />

        <Button
            android:id="@+id/bt07"
            android:layout_width="100dp"
